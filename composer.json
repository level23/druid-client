{
  "name": "level23/druid-client",
  "description": "Druid php client for executing queries and more",
  "keywords": [
    "druid",
    "Apache Druid",
    "incubating",
    "analytics database",
    "timeseries"
  ],
  "authors": [
    {
      "name": "Teye Heimans",
      "email": "teye@level23.nl"
    }
  ],
  "license": "Apache-2.0",
  "type": "library",
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "infection/infection": "^0.27",
    "mockery/mockery": "^1.2",
    "php-coveralls/php-coveralls": "^2.1",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^10",
    "laravel/framework": "^9.0",
    "laravel/lumen-framework": "^9.0"

  },
  "suggest": {
    "psr/log": "Required for using the log handler"
  },
  "autoload": {
    "psr-4": {
      "Level23\\Druid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Level23\\Druid\\Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "infection/infection": true,
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "Level23\\Druid\\DruidServiceProvider"
      ],
      "aliases": {
        "Druid": "Level23\\Druid\\Facades\\Druid"
      }
    }
  }
}
